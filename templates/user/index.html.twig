{% extends 'base.html.twig' %}

{% block title %}Plan Financier - Utilisateurs{% endblock %}
{% block body %}

<div class="clearfix"> &nbsp; </div>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{path('app_dashboard')}}">Dashboard</a></li>
    <li class="breadcrumb-item active" aria-current="page">Utilisateurs</li>
  </ol>
</nav>

<div class="clearfix"> &nbsp; </div>

<div class="container"> 
   <table class="table table-striped text-center">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Pr√©nom</th>
          <th scope="col">Nom</th>
          <th scope="col">Email</th>
          <th scope="col">Actif ?</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for user in users %}
        <tr>
          <th scope="row">{{user.id}}</th>
          <td>{{user.firstname}}</td>
          <td>{{user.lastname}}</td>
          <td>{{user.email}}</td>
          <td>
                {% if user.active %}
                    <i class="far fa-check-square"></i>
                {% else %}
                    <i class="far fa-square"></i> 
                {% endif %}
          </td>
          <td>
            {% if user.active %}
            <a href="{{path('app_user_toogle', {'id' : user.id}) }}"><i class="fas fa-user-minus"></i></a>
            {% else %}
              <a href="{{path('app_user_toogle', {'id' : user.id}) }}"><i class="fas fa-user-plus"></i></a>
            {% endif %}
          </td>
        </tr>
        {% endfor %}
      </tbody>
  </table>
</div>
<div class="clearfix"> &nbsp; </div>

<div class="container"> 
    <div class="card">
        <div class="card-header">
                Ajouter un utilisateur
        </div>
        <div class="clearfix"> &nbsp; </div>
        <div class="card-body">
          <form method="POST" action="{{path('app_user_add')}}">
            <div class="form-group col">
              <label for="exampleInputEmail1">Adresse Email : </label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Adresse Email" required="required" name="email">
            </div>
            <div class="form-group col">
              <label for="exampleInputPassword1">Mot de passe : </label>
              <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Mot de passe" required="required" name="password">
            </div>
            <div class="form-group col">
              <label for="exampleInputPassword1">Prenom : </label>
              <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Prenom" required="required" name="firstname">
            </div>
            <div class="form-group col">
              <label for="exampleInputPassword1">Nom : </label>
              <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Nom" required="required" name="lastname">
            </div>
            <div class="col">
            <div class="form-group form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1" value="1" name="active">
              <label class="form-check-label" for="exampleCheck1" name=>Actif ?</label>
            </div>
          </div>  
            <div class="col">
            <div class="float-right"> 
              <button type="submit" class="btn btn-success">Submit</button>
            </div>
          </div>
          </form>
        </div>
    </div>
</div>

{% endblock %}


