<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Financial Plan{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
          <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <a class="navbar-brand" href="{{path('app_dashboard')}}">Plan Financier</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Initialisation<span class="caret"></span></a>
                    <div class="dropdown-menu">
                      <a class="dropdown-item" href="{{path('app_user')}}">Utilisateurs</a>
                      <a class="dropdown-item" href="{{path('app_thrift')}}">Epargnes</a>
                    </div>
                  </li>
                  <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Prévisionnel<span class="caret"></span></a>
                    <div class="dropdown-menu">
                      <a class="dropdown-item" href="{{path('app_forecast_summary')}}">Résumé</a>
                      <a class="dropdown-item" href="{{path('app_money_entry')}}">Entrées</a>
                      <a class="dropdown-item" href="{{path('app_expenses')}}">Dépenses</a>
                    </div>
                  </li>
                  <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Réel<span class="caret"></span></a>
                    <div class="dropdown-menu">
                      <a class="dropdown-item" href="">Résumé</a>
                      <a class="dropdown-item" href="">Entrées</a>
                      <a class="dropdown-item" href="">Dépenses</a>
                      <a class="dropdown-item" href="">Différentiel avec le prévisionnel</a>
                    </div>
                  </li>

              </ul>
              <ul class="nav navbar-nav navbar-right">
                  <li class="nav-item"><a class="nav-link" href="{{path('app_logout')}}">Déconnexion</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>
        <div class="container" id="top">
        {% block body %}{% endblock %}
        </div>
        <div class="card" style="position: fixed;bottom: 0;right: 0;z-index: 1000;overflow-x: hidden;overflow-y: auto;margin: 15px">
            <a href="#top" class="card-link list-group-item-action" id="toTop">
              <h6 class="card-header">
                  <span class=""><i class="fas fa-arrow-up"></i></span>
              </h6>
            </a>
        </div>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" ></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
